package com.JavaPractice.org;

public class EvenNumber {
	public static void main(String[] args) {
		int number = 12;

		if (number % 12 == 0) {
			System.out.println(number+ " is an even number");
		} else {
			System.out.println(number+ " is not an even number");
		}
	}

}
Output Console:
12 is an even number
